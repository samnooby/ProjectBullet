<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/dailyFragment">

    <fragment
        android:id="@+id/dailyFragment"
        android:name="com.nooby.projectbullet.DailyFragment"
        android:label="DailyFragment"
        tools:layout="@layout/fragment_daily">
        <action
            android:id="@+id/action_homeFragment_to_aboutFragment2"
            app:destination="@id/aboutFragment2" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment2"
        android:name="com.nooby.projectbullet.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/fragment_about"
        >
        <action
            android:id="@+id/action_aboutFragment2_to_homeFragment"
            app:destination="@id/dailyFragment"
            app:popUpTo="@id/dailyFragment"
            />
    </fragment>
</navigation>