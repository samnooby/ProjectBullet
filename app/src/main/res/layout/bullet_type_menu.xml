<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    >

    <ImageButton
        android:id="@+id/btn_bullet_type_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        android:padding="@dimen/padding_menu"
        app:srcCompat="@drawable/bullet_icon_event"
        />

    <ImageButton
        android:id="@+id/btn_bullet_type_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        android:padding="@dimen/padding_menu"
        app:srcCompat="@drawable/bullet_icon_complete"
        />

    <ImageButton
        android:id="@+id/btn_bullet_type_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        android:padding="@dimen/padding_menu"
        app:srcCompat="@drawable/bullet_icon_task"
        />

    <ImageButton
        android:id="@+id/btn_bullet_type_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        app:srcCompat="@drawable/bullet_icon_note"
        android:padding="@dimen/padding_menu"
        />

</LinearLayout>